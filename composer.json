{
    "name": "promethex/ecommerce-test",
    "description": "E-commerce test project",
    "type": "project",
    "authors": [
        {
            "name": "Joe Estrella",
            "email": "jhourest@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Framework\\": "core/",
            "App\\": "app/",
            "Database\\": "database/"
        }
    },
    "require": {
        "php": ">=7.4",
        "datadog/php-datadogstatsd": "^1.7",
        "firebase/php-jwt": "^6.3",
        "illuminate/database": "^10.0",
        "league/flysystem": "^3.12",
        "league/fractal": "^0.20",
        "monolog/monolog": "^3.0",
        "nikic/fast-route": "^1.3",
        "php-di/php-di": "^7.0",
        "phpmailer/phpmailer": "^6.8",
        "respect/validation": "^2.2",
        "symfony/cache": "^6.3",
        "symfony/http-foundation": "^6.3",
        "symfony/messenger": "^6.3",
        "twig/twig": "^3.4",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "serve": "php -S 0.0.0.0:8000 -t .",
        "dev": "echo 'Starting development server on http://localhost:8000' && php -S 0.0.0.0:8000 -t .",
        "start": "php -S 0.0.0.0:8000 -t .",
        "dev-win": "php -S localhost:8000 -t .",
        "migrate": "php src/database/migrate.php migrate",
        "migrate:rollback": "php src/database/migrate.php rollback",
        "migrate:status": "php src/database/migrate.php migrate:status",
        "migrate:refresh": "php src/database/migrate.php migrate:refresh",
        "seed": "php src/database/migrate.php seed",
        "seed:user": "php src/database/migrate.php seed:user",
        "seed:product": "php src/database/migrate.php seed:product",
        "seed:fresh": "php src/database/migrate.php seed:fresh",
        "seed:status": "php src/database/migrate.php seed:status",
        "seed:reset": "php src/database/migrate.php seed:reset",
        "fresh": "php src/database/migrate.php fresh"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "process-timeout": 0
    }
}
